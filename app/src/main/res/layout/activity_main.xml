<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eos.colortransfer.MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:id="@+id/editViewGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/r"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="R"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/border_style_red"
            android:textColorHint="#f00"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/g"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_style_green"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="G"
            android:textSize="20sp"
            android:textColorHint="#0f0"
            android:gravity="center"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_style_blue"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="B"
            android:textSize="20sp"
            android:textColorHint="#00f"
            android:gravity="center"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_style_transparent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:hint="A"
            android:textSize="20sp"
            android:textColorHint="#ffc0c0c0"
            android:gravity="center"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/tone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="色值"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/color_display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转换"
        android:background="#f00"
        android:textColor="#fbff"
        android:textSize="25sp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>